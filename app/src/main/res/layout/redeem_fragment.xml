    <android.support.v7.widget.RecyclerView
        android:id="@+id/gv_redeem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/address_layout_medium_margin"
        android:layout_marginTop="@dimen/address_layout_medium_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/outlet_fragment_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/outlet_fragment_collapsing_tollbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_collapseMode="parallax">

                <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                    android:id="@+id/ads_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.twyst.app.android.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp" />
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/ll_twyst_bucks_launcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/layout_huge_margin">

                <ImageView
                    android:layout_width="@dimen/layout_huge_margin"
                    android:layout_height="@dimen/layout_huge_margin"
                    android:layout_marginRight="@dimen/layout_wide_margin"
                    android:src="@drawable/twystbucksicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Twyst Bucks"
                    android:textSize="@dimen/layout_wide_margin" />

                <TextView
                    android:id="@+id/tv_current_address_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:paddingRight="@dimen/layout_wide_margin"
                    android:singleLine="true"
                    android:textSize="@dimen/layout_wide_margin" />

                <TextView
                    android:id="@+id/tv_my_twyst_bucks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/layout_small_margin"
                    android:text="580"
                    android:textSize="@dimen/layout_wide_margin" />

                <ImageView
                    android:layout_width="@dimen/layout_huge_margin"
                    android:layout_height="@dimen/layout_huge_margin"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/collapsed" />

            </LinearLayout>

        </FrameLayout>

    </android.support.design.widget.AppBarLayout>
</android.support.design.widget.CoordinatorLayout>