<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:padding="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_rb_payment_select"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/unchecked"
                android:layout_marginLeft="8dp"/>

            <TextView
                android:id="@+id/tv_payment_option_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:text="Online Payment"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:id="@+id/ll_cashback_icon"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/twystbucksicon"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tv_cashback_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="15%"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/layout_wide_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_cashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_cashback_icon"
                android:layout_centerHorizontal="true"
                android:text="CashBack"
                android:textSize="@dimen/layout_wide_text_size" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>