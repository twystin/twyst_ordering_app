<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_view_style"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout style="@style/card_text_heading_layout">

            <TextView
                style="@style/card_text_heading_text"
                android:text="Verify Email" />

            <include
                android:id="@+id/iv_email_verify_correct"
                layout="@layout/correct_symbol" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_verify_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15"
                android:gravity="center"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:paddingTop="3dp"
                android:selectAllOnFocus="true"
                android:textColor="@color/black"
                android:textColorHint="#8c8c8c"
                android:textCursorDrawable="@null" />

            <ImageView
                android:id="@+id/iv_edit_email"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/edit_icon" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
