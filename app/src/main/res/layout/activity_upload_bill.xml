<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa">

        <include
            android:id="@+id/toolbarWrapper"
            layout="@layout/toolbar_wrapper" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbarWrapper"
            android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload your bill to check-in and earn Twyst Bucks!"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/dialog_content_text"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="Please keep in mind:"
                android:textColor="@color/primary_dark"
                android:textSize="@dimen/dialog_content_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1.You can upload bill from any Twyst outlet up to 7 days after visited or ordered e.g if you have visited on 01-Jan,upload the bill by 08-Jan."
                android:textColor="#7c7c7c"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2.The entire bill must be visible in the picture.Please ensure the merchant and outlet name,bill no.,date and time,and amount are clearly visible. "
                android:textColor="#7c7c7c"
                android:textSize="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="3.A bill must be approved only once with the check-in and Twyst Bucks going to the user who first uploaded it"
                android:textColor="#7c7c7c"
                android:textSize="11dp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#d4d4d4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="Outlet Name"
                android:textColor="#7c7c7c"
                android:textSize="@dimen/dialog_content_text" />

            <AutoCompleteTextView
                android:id="@+id/outletNameET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_shape"
                android:gravity="top"
                android:padding="4dp"
                android:textCursorDrawable="@null"
                android:completionThreshold="1"
                android:singleLine="true"
                android:textColor="#2E2E2E"
                android:textColorHint="#2E2E2E"
                android:textSize="@dimen/dialog_content_text" />

            <TextView
                android:id="@+id/tvLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/submit_offer_margin_bottom"
                android:layout_marginTop="@dimen/submit_offer_margin"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="Location"
                android:textColor="#7c7c7c"
                android:textSize="@dimen/dialog_content_text" />

            <Spinner
                android:id="@+id/spinnerLocationList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:visibility="gone"
                android:padding="4dp"
                android:paddingBottom="5dp"
                android:singleLine="false"
                android:textCursorDrawable="@null"
                android:textColor="#2E2E2E"
                android:textColorHint="#2E2E2E"
                android:textSize="@dimen/dialog_content_text" />

            <EditText
                android:id="@+id/locationEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_shape"
                android:gravity="top"
                android:padding="4dp"
                android:paddingBottom="5dp"
                android:singleLine="false"
                android:textCursorDrawable="@null"
                android:textColor="#2E2E2E"
                android:textColorHint="#2E2E2E"
                android:textSize="@dimen/dialog_content_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="Bill Date"
                android:textColor="#7c7c7c"
                android:textSize="@dimen/dialog_content_text" />

            <LinearLayout
                android:id="@+id/billDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <EditText
                    android:id="@+id/outletBillET"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="85"
                    android:background="@drawable/edittext_shape"
                    android:focusableInTouchMode="false"
                    android:gravity="top"
                    android:padding="4dp"
                    android:singleLine="false"
                    android:textColor="#2E2E2E"
                    android:textColorHint="#2E2E2E"
                    android:textSize="@dimen/dialog_content_text" />

                <ImageView
                    android:id="@+id/calIcon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:src="@drawable/upload_bill_calender_icon" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/takePhoto"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    app:mrl_rippleOverlay="true">

                    <LinearLayout
                        android:id="@+id/takePhotoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/button_red"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:src="@drawable/upload_bill_camera_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:text="Take Bill Photo"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="12dp" />
                    </LinearLayout>

                </com.balysv.materialripple.MaterialRippleLayout>

                <RelativeLayout
                    android:id="@+id/layoutImage"
                    android:layout_below="@+id/takePhoto"
                    android:layout_alignParentLeft="true"
                    android:layout_width="160dp"
                    android:layout_height="110dp">
                    <TextView
                        android:id="@+id/editImageButton"
                        android:layout_width="40dp"
                        android:visibility="gone"
                        android:background="@android:color/transparent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentBottom="true"
                        android:textSize="18dp"
                        android:textColor="@color/half_black"
                        android:layout_marginBottom="5dp"
                        android:text="Edit"/>
                <ImageView
                    android:id="@+id/attachImage"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp" />

                </RelativeLayout>


                <com.balysv.materialripple.MaterialRippleLayout
                    android:id="@+id/uploadBtn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_centerHorizontal="true"
                    app:mrl_rippleOverlay="true">

                    <Button
                        android:id="@+id/uploadPhotoButton"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/button_grey"
                        android:text="Upload"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/dialog_button_text" />

                </com.balysv.materialripple.MaterialRippleLayout>


            </RelativeLayout>


        </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/circularProgressBar"
            layout="@layout/twyst_progress_hud" />


    </RelativeLayout>

    <include
        android:id="@+id/drawer_list"
        layout="@layout/drawer_list" />
</android.support.v4.widget.DrawerLayout>