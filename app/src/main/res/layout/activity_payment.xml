<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    tools:context=".activities.PaymentOptionsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <android.support.v7.widget.CardView style="@style/card_view_style">

                <ListView
                    android:id="@+id/lv_payment_options"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">

                </ListView>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/bProceed"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/big_button"
            android:clickable="true"
            android:enabled="false"
            android:gravity="center"
            android:text="PROCEED"
            android:textColor="@android:color/white"
            android:textSize="@dimen/layout_huge_text_size" />
    </RelativeLayout>

</LinearLayout>