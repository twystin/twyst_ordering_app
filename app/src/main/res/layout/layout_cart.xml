<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_layout_height"
    android:orientation="vertical"
    android:padding="10dp"
    android:isScrollContainer="true">

    <RelativeLayout
        android:id="@+id/layoutName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="3dp">

        <ImageView
            android:id="@+id/ivVeg"
            android:layout_width="@dimen/menu_icons_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:padding="8dp"
            android:src="@drawable/veg"/>

        <TextView
            android:id="@+id/menuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Chicken Maha Burger"
            android:layout_toRightOf="@+id/ivVeg"
            android:textColor="@android:color/black"
            android:textSize="@dimen/outlet_offer_header_textsize" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/menu_icons_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/view"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMinus"
                android:padding="2dp"
                android:layout_width="@dimen/menu_icons_width"
                android:layout_height="@dimen/menu_icons_width"
                android:src="@drawable/minus"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:text="1"
                android:textColor="@color/primary"
                android:textSize="@dimen/outlet_offer_header_textsize" />

            <ImageView
                android:id="@+id/ivPlus"
                android:layout_width="@dimen/menu_icons_width"
                android:layout_height="@dimen/menu_icons_width"
                android:src="@drawable/plus"
                android:padding="2dp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tvX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/x_sign"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/outlet_offer_header_textsize" />

            <TextView
                android:id="@+id/tvRs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rupee_sign"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/outlet_offer_header_textsize" />

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="@dimen/outlet_offer_header_textsize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRs1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rupee_sign"
                android:textColor="@android:color/black"
                android:textSize="@dimen/outlet_offer_header_textsize" />

            <TextView
                android:id="@+id/tvCalculatedCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160"
                android:textColor="@android:color/black"
                android:textSize="@dimen/outlet_offer_header_textsize" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>