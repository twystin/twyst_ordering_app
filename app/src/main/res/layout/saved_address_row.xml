<?xml version="1.0" encoding="utf-8"?>
<com.twyst.app.android.layout.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/background_grey">

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/radio_saved_address"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/address_layout_horizontal_huge_margin"
        android:scaleType="centerCrop"
        android:duplicateParentState="true"/>
    <LinearLayout
        android:paddingLeft="@dimen/address_layout_horizontal_medium_margin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Samir"
            android:textSize="@dimen/address_medium_text_size"
            android:gravity="bottom"
            android:paddingBottom="2dp"
            android:id="@+id/tv_name"
            android:textColor="@color/black_54"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:text="A-5/16, DLF Phase 1"
            android:textSize="@dimen/address_medium_text_size"
            android:id="@+id/tv_address"
            android:textColor="@color/black_38"
            android:ellipsize="end"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/address_layout_horizontal_huge_margin"
        android:paddingLeft="@dimen/address_layout_horizontal_huge_margin">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/address_work_enabled"
            android:id="@+id/image_tag"
            android:layout_gravity="right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work"
            android:textColor="@color/black_38"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/address_small_text_size"
            android:id="@+id/tv_tag_name" />
    </LinearLayout>

</com.twyst.app.android.layout.CheckableLinearLayout>