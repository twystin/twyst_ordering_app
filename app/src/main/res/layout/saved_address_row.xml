<?xml version="1.0" encoding="utf-8"?>
<com.twyst.app.android.layout.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/outlet_coupon_bg_color_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/radio_saved_address"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/address_layout_horizontal_huge_margin"
        android:duplicateParentState="true"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:paddingLeft="@dimen/address_layout_horizontal_medium_margin"
        android:singleLine="true"
        android:text="A-5/16, DLF Phase 1"
        android:textColor="@color/black_38"
        android:textSize="@dimen/address_medium_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/address_layout_horizontal_huge_margin"
        android:paddingRight="@dimen/address_layout_horizontal_huge_margin">

        <ImageView
            android:id="@+id/image_tag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/address_work_enabled" />

        <TextView
            android:id="@+id/tv_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Work"
            android:textColor="@color/black_38"
            android:textSize="@dimen/address_small_text_size" />
    </LinearLayout>

</com.twyst.app.android.layout.CheckableLinearLayout>