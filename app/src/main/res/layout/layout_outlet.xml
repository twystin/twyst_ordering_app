<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="8dp"
        android:padding="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="@dimen/layout_medium_margin">

            <RelativeLayout
                android:layout_width="104dp"
                android:layout_height="116dp">

                <ImageView
                    android:id="@+id/outlet_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@drawable/default_outlet_bg"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/outlet_logo"
                    android:alpha="0.7"
                    android:background="@color/colorSecondaryBlue"
                    android:orientation="horizontal"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                    <TextView
                        android:id="@+id/tvDeliveryExperience"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:padding="2dp"
                        android:text="4.1"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/layout_wide_text_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_star"
                            android:layout_width="7dp"
                            android:layout_height="7dp"
                            android:layout_gravity="left|center_vertical"
                            android:src="@drawable/star" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/layout_medium_margin"
                android:paddingRight="@dimen/layout_medium_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/layout_small_margin">

                    <TextView
                        android:id="@+id/outletName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="Striker Pub &amp; Brewery"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/layout_huge_text_size" />

                    <TextView
                        android:id="@+id/outletAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawablePadding="2dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Sector 15, Gurgaon"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/layout_medium_text_size" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/layout_small_margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cuisines_names"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="chinese, italian"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/layout_medium_text_size" />

                        <TextView
                            android:id="@+id/delivery_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_small_margin"
                            android:drawablePadding="@dimen/layout_small_margin"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="45 minutes"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/layout_medium_text_size" />

                        <TextView
                            android:id="@+id/min_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_small_margin"
                            android:drawablePadding="@dimen/layout_small_margin"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="300 min order"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/layout_medium_text_size" />

                        <TextView
                            android:id="@+id/no_of_offers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_small_margin"
                            android:drawablePadding="@dimen/layout_small_margin"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="3 Offers Available"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/layout_medium_text_size" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/layout_small_margin">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="14dp"
                                android:background="@drawable/twystbucksicon" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="4dp"
                                android:paddingRight="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upto"
                                    android:textColor="@color/text_grey"
                                    android:textSize="@dimen/layout_medium_text_size" />

                                <TextView
                                    android:id="@+id/tv_twyst_bucks_percentage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="12%"
                                    android:textColor="@color/text_grey"
                                    android:textSize="@dimen/layout_medium_text_size" />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_twyst_bucks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/layout_small_margin"
                            android:gravity="right"
                            android:text="Twyst Bucks"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/layout_medium_text_size" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>