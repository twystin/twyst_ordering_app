<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="11"
    android:background="@color/white"
    android:minHeight="@dimen/menu_layout_height"
    android:orientation="horizontal"
    android:padding="@dimen/menu_padding_layout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/menu_padding_layout"
        android:paddingTop="2dp">

        <ImageView
            android:id="@+id/iv_vegNonVegIcon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/veg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:text="Chicken Maha Burger"
            android:textColor="@android:color/black"
            android:textSize="@dimen/menu_text" />

        <LinearLayout
            android:id="@+id/llCustomisations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/item_bread_crumb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/half_black"
            android:textSize="@dimen/menu_description_text" />

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/half_black"
            android:textSize="@dimen/menu_description_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="4dp"
            android:text="160"
            android:textColor="@android:color/black"
            android:textSize="@dimen/menu_text" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

            <ImageView
                android:id="@+id/ivMinus"
                android:layout_width="@dimen/menu_icons_width"
                android:layout_height="@dimen/menu_icons_width"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/minus" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="1"
                android:textColor="@color/primary"
                android:textSize="@dimen/menu_text" />

            <ImageView
                android:id="@+id/ivPlus"
                android:layout_width="@dimen/menu_icons_width"
                android:layout_height="@dimen/menu_icons_width"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/plus" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>