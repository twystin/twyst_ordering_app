<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="10"
    android:minHeight="@dimen/menu_layout_height"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menuItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken Maha Burger"
            android:drawablePadding="10dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/outlet_offer_header_textsize" />

        <TextView
            android:id="@+id/tvCustomisations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_marginTop="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rupee_sign"
                android:textColor="@android:color/black"
                android:textSize="@dimen/outlet_offer_header_textsize" />

            <TextView
                android:id="@+id/tvCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="160"
                android:textColor="@android:color/black"
                android:textSize="@dimen/outlet_offer_header_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMinus"
                android:layout_width="@dimen/menu_icons_width"
                android:layout_height="@dimen/menu_icons_width"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/minus" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="1"
                android:textColor="@color/primary"
                android:textSize="@dimen/outlet_offer_header_textsize" />

            <ImageView
                android:id="@+id/ivPlus"
                android:layout_width="@dimen/menu_icons_width"
                android:layout_height="@dimen/menu_icons_width"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/plus" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>