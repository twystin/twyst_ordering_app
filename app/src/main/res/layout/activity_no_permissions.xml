<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twyst.app.android.activities.NoPermissionsActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/network"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:paddingTop="@dimen/layout_wide_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/layout_wide_text_size"
            android:text="@string/no_permission_provided" />
        <TextView
            android:paddingTop="@dimen/layout_huge_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_wide_margin"
            android:text="@string/retry"
            android:id="@+id/retry_permission"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</RelativeLayout>
